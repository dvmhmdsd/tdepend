{
  "name": "tdepend",
  "version": "0.1.0",
  "private": true,
  "description": "TDepend: JDepend-inspired dependency analysis tool for TypeScript",
  "bin": {
    "tdepend": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "ts-node src/cli/index.ts analyze --help",
    "cli": "node dist/cli/index.js",
    "test": "vitest run",
    "format": "prettier --write ."
  },
  "keywords": [
    "dependency",
    "analysis",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "commander": "^12.0.0",
    "glob": "^13.0.0",
    "ts-morph": "^27.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "^20.11.30",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
